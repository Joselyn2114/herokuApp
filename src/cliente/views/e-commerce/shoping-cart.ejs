	<script>

	    $(document).ready(function() {
			
			cargarPronvincias();

	        // Maneja el evento de envío del formulario
	        $('#checkoutForm').submit(function(event) {
	            event.preventDefault(); // Evita que el formulario se envíe automáticamente

	            // Obtiene los datos del formulario
	            var formData = $(this).serialize();
	            // Envía una solicitud POST al nuevo endpoint para guardar la orden
	            $.post('/guardar-orden', formData, function(response) {
					alert('¡La orden se guardó correctamente!');
					window.location.href = '/product.html';
	                // Maneja la respuesta del servidor
	                console.log(response); // Puedes mostrar un mensaje de éxito o redireccionar a otra página
	            }).fail(function(error) {
					alert('¡Falló al completar la orden, intente de nuevo por favor!');
	                console.error('Error al guardar la orden:', error); // Maneja los errores
	            });
	        });
	    });

		async function cargarPronvincias() {
            try {
				const provinciasJsonFile = 'static/e-commerse/provinciasCantones.json';
                const response = await fetch(provinciasJsonFile);
                const data = await response.json();

				const provinciasSelect = $('#province');							

				$.each(data.provincias, function(idProvincia, provincia) {
					const option = document.createElement('option');
                    option.text = provincia.nombre;
                    option.value = idProvincia;
					provinciasSelect.append(option);
            });

            } catch (error) {
                console.error('Error al cargar el archivo JSON de Pronvincias y Cantones:', error);
            }
        }

		async function cargarCanton(){
			const idProvinciaSeleccionada = $('#province').val();
			const nombre = $('#province option:selected').text();

			$('#nombreProvincia').val(nombre);
			try {
				const provinciasJsonFile = 'static/e-commerse/provinciasCantones.json';
                const response = await fetch(provinciasJsonFile);
                const data = await response.json();
				const cantonesSelect = $('#city');				
				cantonesSelect.empty();
				cantonesSelect.append($('<option>', {
					value: '',
					text: 'Seleccione un cantón...',
					disabled: 'disabled',
					selected: 'selected'
				}));
				$.each(data.provincias, function(idProvincia, provincia) {					
					if(idProvincia == idProvinciaSeleccionada){
						$.each(provincia.cantones, function(idCanton, canton){
							const option = document.createElement('option');
							option.text = canton.nombre;
							option.value = idCanton;
							cantonesSelect.append(option);
						});
					}
					return;
            });

            } catch (error) {
                console.error('Error al cargar el archivo JSON de Pronvincias y Cantones:', error);
            }
		};

		function guardaNombreCanton(){
			const nombre = $('#city option:selected').text();

			$('#nombreCanton').val(nombre);
		}
	</script>

