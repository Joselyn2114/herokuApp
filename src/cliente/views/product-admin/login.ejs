<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Inicio de sesión</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700" />
  <link rel="stylesheet" href="static/product-admin/css/fontawesome.min.css" />
  <link rel="stylesheet" href="static/product-admin/css/bootstrap.min.css" />
  <link rel="stylesheet" href="static/product-admin/css/templatemo-style.css">
  <style>
    body.contrast-mode {
      background-color: #fff !important;
      color: #000 !important;
    }

    .contrast-mode .tm-bg-primary-dark {
      background-color: #8d6fb6 !important;
      color: #fff !important;
    }

    .contrast-mode .tm-block-title {
      color: #8d6fb6 !important;
    }

    .contrast-mode .btn.btn-primary {
      background-color: #8d6fb6 !important;
      border-color: #8d6fb6 !important;
      color: #fff !important;
    }

    .contrast-mode .btn.btn-primary:hover {
      background-color: #7b5ea4 !important;
      border-color: #7b5ea4 !important;
      color: #fff !important;
    }

    .contrast-mode .text-white {
      color: #fff !important;
    }

    body {
      background-color: #fff;
      color: #333;
    }

    .navbar {
      background-color: #829eb4 !important;
    }

    .tm-footer {
      background-color: #829eb4;
      color: #ffffff;
    }

    .tm-block-title {
      color: #8d6fb6;
      font-size: 24px;
    }

    .btn.btn-primary {
      background-color: #fff;
      border-color: #8d6fb6;
      color: #8d6fb6;
    }

    .btn.btn-primary:hover {
      background-color: #f0f0f0;
      border-color: #8d6fb6;
      color: #8d6fb6;
    }

    .text-white {
      color: #fff;
    }

    .tm-login-col {
      background-color: #fff;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .tm-login-form label {
      color: #8d6fb6;
    }

    .tm-login-form input {
      border-color: #8d6fb6;
    }

    .tm-login-form input:focus {
      box-shadow: 0 0 0 0.2rem rgba(141, 111, 182, 0.25);
    }

    .form-control {
      background-color: #fff;
      border: 1px solid #8d6fb6;
      color: #000;
    }

    .form-control:focus {
      background-color: #fff;
      color: #000;
    }

    .btn-link {
      color: #8d6fb6;
      font-weight: bold;
    }

    /* Estilo para la notificación de error */
    .alert {
      margin-top: 10px;
      padding: 10px;
      color: #721c24;
      background-color: #f8d7da;
      border-color: #f5c6cb;
      font-size: smaller;
    }

  </style>
</head>

<body>
  <div>
    <nav class="navbar navbar-expand-xl">
      <div class="container h-100">
        <a class="navbar-brand" href="#">
          <h1 class="tm-site-title mb-0">Aldea Moda</h1>
        </a>
      </div>
    </nav>
  </div>

  <div class="container tm-mt-big tm-mb-big">
    <div class="row">
      <div class="col-12 mx-auto tm-login-col">
        <div class="tm-block">
          <div class="row">
            <div class="col-12 text-center">
              <h2 class="tm-block-title mb-4">Inicio de Sesión</h2>
              <p style="color: #666;">Por favor, inicie sesión para acceder a su cuenta.</p>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-12">
              <form action="/login.html" method="post" class="tm-login-form">
                <div class="form-group">
                  <label for="email">Correo electrónico</label>
                  <input
                    name="email"
                    type="text"
                    class="form-control validate"
                    id="email"
                    value=""
                    required
                  />
                </div>
                <div class="form-group mt-3">
                  <label for="password1">Contraseña</label>
                  <input
                    name="password1"
                    type="password"
                    class="form-control validate"
                    id="password1"
                    value=""
                    required
                  />
                </div>
                <!-- Notificación de contraseña incorrecta-->
                <% if (typeof error !== 'undefined' && error !== null && error !== '') { %>
                  <span class="mt-3 alert" role="alert">
                      <%= error %>
                  </span>
                  <% } %>
                <div class="form-group mt-4">
                  <button
                    type="submit"
                    class="btn btn-primary btn-block text-uppercase"
                    aria-label="Ingresar"
                  >
                    Ingresar
                  </button>
                </div>                
              </form>
              <a class="mt-3 btn btn-link btn-block text-uppercase" href="/accounts.html">
                ¿Olvidó su contraseña?
              </a>
            </div>
            <a class="mt-3 btn btn-link btn-block text-uppercase" href="#" data-toggle="modal" data-target="#registroModal">
              ¿No tiene cuenta? Registrarse
            </a>

<!-- Modal de registro -->
              <div class="modal fade" id="registroModal" tabindex="-1" role="dialog" aria-labelledby="registroModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="registroModalLabel"style="color: #8d6fb6; font-weight: bold;">Registro de Cuenta</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form id="registroForm" action='/updateAccount' method="post" class="tm-signup-form row" onsubmit="return validateForm()">
                        <div class="form-group col-lg-6">
                          <label for="name"style="color: #8d6fb6;">Nombre de la cuenta</label>
                          <input
                            id="name"
                            name="name"
                            type="text"
                            class="form-control validate"
                            required
                            pattern="[^\s].*"
                            title="No se permiten espacios en blanco"
                            aria-label="Nombre de la cuenta"
                          />
                        </div>
                        <div class="form-group col-lg-6">
                          <label for="email"style="color: #8d6fb6;">Cuenta de email</label>
                          <input
                            id="email"
                            name="email"
                            type="email"
                            class="form-control validate"
                            required
                            pattern="[^@\s]+@[^@\s]+\.[^@\s]+"
                            title="Ingrese una dirección de correo electrónico válida"
                            aria-label="Cuenta de email"
                          />
                        </div>
                        <div class="form-group col-lg-6">
                          <label for="password"style="color: #8d6fb6;">Contraseña</label>
                          <div class="input-group">
                            <input
                              id="password"
                              name="password"
                              type="password"
                              class="form-control validate"
                              aria-describedby="showPassword"
                              required
                              aria-label="Contraseña"
                            />
                            <div class="input-group-append">
                              <button class="btn btn-outline-secondary" type="button" id="showPassword" aria-label="Mostrar contraseña">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                              </button>
                            </div>
                          </div>
                        </div>
                        <div class="form-group col-lg-6">
                          <label for="password2"style="color: #8d6fb6;">Escriba la contraseña otra vez</label>
                          <input
                            id="password2"
                            name="password2"
                            type="password"
                            class="form-control validate"
                            required
                            aria-label="Escriba la contraseña otra vez"
                          />
                        </div>
                        <div class="form-group col-lg-6">
                          <label for="phone"style="color: #8d6fb6;">Teléfono</label>
                          <input
                            id="phone"
                            name="phone"
                            type="tel"
                            class="form-control validate"
                            pattern="[0-9]+"
                            title="El teléfono debe contener solo números"
                            aria-label="Teléfono"
                          />
                        </div>
                        <div class="form-group col-lg-6">
                          <input
                            id="accountId"
                            name="id"
                            type="text"
                            style="display: none;"
                            value="-1"
                            aria-hidden="true"
                          />
                        </div>
                        <div class="form-group col-lg-12">
                          <button
                            type="submit"
                            class="btn btn-primary btn-block text-uppercase"
                            id="btnCrearCuenta"
                          >
                            Crear Cuenta
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>

              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#notificationModal" id="openModalButton" style="display:none;">
                Launch modal
              </button>

              <!-- Modal de error de contraseñas -->
              <div class="modal fade" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="notificationModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header" style="background-color: #8d6fb6; color: #fff;">
                      <h5 class="modal-title" id="notificationModalLabel">Error al crear cuenta</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Cerrar</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <p id="notificationMessage">Las contraseñas no coinciden</p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-primary btn-block text-uppercase" data-dismiss="modal" aria-label="Cerrar">Cerrar</button>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Modal de éxito al agregar cuenta -->
              <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header" style="background-color: #8d6fb6; color: #fff;">
                      <h5 class="modal-title" id="successModalLabel">Cuenta creada exitosamente</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Cerrar</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <p id="successMessage" aria-live="polite">¡La cuenta ha sido creada exitosamente!</p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-primary btn-block text-uppercase" data-dismiss="modal" aria-label="Cerrar">Cerrar</button>
                    </div>
                  </div>
                </div>
              </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  <footer class="tm-footer row tm-mt-small">
    <div class="col-12 font-weight-light">
      <p class="text-center text-white mb-0 px-4 small">
        Derechos de autor &copy; <b>2024</b> Reservados todos los derechos.
      </p>
    </div>
  </footer>
  <script src="static/product-admin/js/jquery-3.3.1.min.js"></script>
  <script src="static/product-admin/js/bootstrap.min.js"></script>
  <script>
    // Función para alternar el modo de alto contraste
    function toggleContrast() {
      document.body.classList.toggle('contrast-mode');
    }

    function validateForm() {
    var password = document.getElementById("password").value;
    var password2 = document.getElementById("password2").value;

    if (password !== password2) {
      $('#notificationModal').modal('show');
      return false;
    }

    return true;
  }

  $('#showPassword').click(function() {
        var tipo = $('#password').attr('type');
        if (tipo === 'password') {
            $('#password').attr('type', 'text');
            $('#showPassword i').removeClass('fa-eye').addClass('fa-eye-slash');
        } else {
            $('#password').attr('type', 'password');
            $('#showPassword i').removeClass('fa-eye-slash').addClass('fa-eye');
        }
    });

      // Esta función muestra la notificación de éxito al agregar una cuenta
    function showSuccessNotification() {
      $('#successModal').modal('show');
        setTimeout(function() {
        window.location.href = '/index.html'; // Reemplaza '/otra-vista' con la URL deseada
      }, 3000);
    }

      // Evento que se ejecuta cuando el formulario se envía correctamente
    $('#registroForm').submit(function(event) {
      event.preventDefault(); // Evita que el formulario se envíe automáticamente
      var form = $(this);
      if (validateForm()) {
        // Aquí podrías realizar cualquier otra acción necesaria antes de enviar el formulario
        // Por ejemplo, enviar datos a través de AJAX
        $.ajax({
          type: form.attr('method'),
          url: form.attr('action'),
          data: form.serialize(),
          success: function(data) {
            // Si la operación de agregar la cuenta es exitosa, mostramos la notificación de éxito
            showSuccessNotification();
          },
          error: function(xhr, status, error) {
            // Manejar cualquier error si la operación de agregar la cuenta falla
            console.error("Error al agregar la cuenta:", error);
            // Puedes mostrar una notificación de error aquí si lo deseas
          }
        });
      }
    });


  </script>
</body>

</html>
